{
  "name": "orchestrix-backend-core",
  "version": "1.0.0",
  "description": "Standalone Bun-based backend for Orchestrix - migrated from Motia framework",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "start": "bun run src/index.ts",
    "build": "bun build src/index.ts --outdir ./dist --target bun",
    "test": "bun test",
    "test:mcp": "bun run test-mcp-infrastructure.ts",
    "test:mcp:e2e": "bun run src/mcp/tests/e2e.infrastructure.test.ts",
    "test:agent": "bun run src/mcp/tests/agent.orchestration.test.ts"
  },
  "keywords": [
    "orchestrix",
    "workflow",
    "automation",
    "bun"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@huggingface/inference": "^2.6.4",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "groq-sdk": "^0.3.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.0",
    "nodemailer": "^6.9.7",
    "openai": "^4.20.0",
    "socket.io": "^4.6.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/bcryptjs": "^2.4.6",
    "@types/nodemailer": "^6.4.14",
    "@types/cors": "^2.8.17",
    "@types/uuid": "^9.0.7",
    "bun-types": "latest"
  }
}
